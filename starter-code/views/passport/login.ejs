<h1>Login to IBI</h1>

<form method="post" action="/login">
	<label>Username</label>
	<input type="text" name="username">
	<br>
	<label>Password</label>
	<input type="password" name="password">
	<br>
  <% if (message) { %>
<div class="error-message"><%= message %></div>
  <% } %>
	<button type="submit">Login</button>
</form>
